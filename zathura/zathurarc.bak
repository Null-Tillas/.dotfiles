### Settings from original zathurarc ###
set guioptions "s v"
set window-height 1000
set window-width 1500

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#d5d5cf'
set completion-bg '#0a0604'

# Command line completion group elements
set completion-group-fg '#9A5629'
set completion-group-bg '#0a0604'

# Current command line completion element
set completion-highlight-fg '#0a0604'
set completion-highlight-bg '#d5d5cf'

# Default foreground/background color
set default-bg rgba(10,6,4,1)

# Input bar
set inputbar-fg '#d5d5cf'
set inputbar-bg '#0a0604'

# Notification
set notification-fg '#d5d5cf'
set notification-bg '#0a0604'

# Error notification
set notification-error-fg '#d5d5cf'
set notification-error-bg '#695C51'

# Warning notification
set notification-warning-fg '#d5d5cf'
set notification-warning-bg '#695C51'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#d5d5cf'
set statusbar-bg '#0a0604'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#9A5629'
set highlight-active-color '#9A5629'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#d5d5cf'

# 'Loading...' text
set render-loading-fg '#d5d5cf'
set render-loading-bg '#0a0604'

# Index mode
set index-fg '#d5d5cf'
set index-bg '#0a0604'

# Selected element in index mode
set index-active-fg '#0a0604'
set index-active-bg '#d5d5cf'