### Settings from original zathurarc ###
set guioptions "s v"
set window-height 1000
set window-width 1500

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#aabdcf'
set completion-bg '#0D142E'

# Command line completion group elements
set completion-group-fg '#BF8D66'
set completion-group-bg '#0D142E'

# Current command line completion element
set completion-highlight-fg '#0D142E'
set completion-highlight-bg '#aabdcf'

# Default foreground/background color
set default-bg rgba(13,20,46,1)

# Input bar
set inputbar-fg '#aabdcf'
set inputbar-bg '#0D142E'

# Notification
set notification-fg '#aabdcf'
set notification-bg '#0D142E'

# Error notification
set notification-error-fg '#aabdcf'
set notification-error-bg '#C0686A'

# Warning notification
set notification-warning-fg '#aabdcf'
set notification-warning-bg '#C0686A'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#aabdcf'
set statusbar-bg '#0D142E'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#BF8D66'
set highlight-active-color '#BF8D66'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#aabdcf'

# 'Loading...' text
set render-loading-fg '#aabdcf'
set render-loading-bg '#0D142E'

# Index mode
set index-fg '#aabdcf'
set index-bg '#0D142E'

# Selected element in index mode
set index-active-fg '#0D142E'
set index-active-bg '#aabdcf'