### Settings from original zathurarc ###
set guioptions "s v"
set window-height 1000
set window-width 1500

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#f4e3c1'
set completion-bg '#0F0603'

# Command line completion group elements
set completion-group-fg '#B36B30'
set completion-group-bg '#0F0603'

# Current command line completion element
set completion-highlight-fg '#0F0603'
set completion-highlight-bg '#f4e3c1'

# Default foreground/background color
set default-bg rgba(15,6,3,1)

# Input bar
set inputbar-fg '#f4e3c1'
set inputbar-bg '#0F0603'

# Notification
set notification-fg '#f4e3c1'
set notification-bg '#0F0603'

# Error notification
set notification-error-fg '#f4e3c1'
set notification-error-bg '#9B5E2F'

# Warning notification
set notification-warning-fg '#f4e3c1'
set notification-warning-bg '#9B5E2F'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#f4e3c1'
set statusbar-bg '#0F0603'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#B36B30'
set highlight-active-color '#B36B30'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#f4e3c1'

# 'Loading...' text
set render-loading-fg '#f4e3c1'
set render-loading-bg '#0F0603'

# Index mode
set index-fg '#f4e3c1'
set index-bg '#0F0603'

# Selected element in index mode
set index-active-fg '#0F0603'
set index-active-bg '#f4e3c1'