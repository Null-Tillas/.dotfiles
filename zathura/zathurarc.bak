### Settings from original zathurarc ###
set guioptions "s v"
set window-height 1000
set window-width 1500

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#a5b7cf'
set completion-bg '#0d0201'

# Command line completion group elements
set completion-group-fg '#A65515'
set completion-group-bg '#0d0201'

# Current command line completion element
set completion-highlight-fg '#0d0201'
set completion-highlight-bg '#a5b7cf'

# Default foreground/background color
set default-bg rgba(13,2,1,1)

# Input bar
set inputbar-fg '#a5b7cf'
set inputbar-bg '#0d0201'

# Notification
set notification-fg '#a5b7cf'
set notification-bg '#0d0201'

# Error notification
set notification-error-fg '#a5b7cf'
set notification-error-bg '#91360D'

# Warning notification
set notification-warning-fg '#a5b7cf'
set notification-warning-bg '#91360D'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#a5b7cf'
set statusbar-bg '#0d0201'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#A65515'
set highlight-active-color '#A65515'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#a5b7cf'

# 'Loading...' text
set render-loading-fg '#a5b7cf'
set render-loading-bg '#0d0201'

# Index mode
set index-fg '#a5b7cf'
set index-bg '#0d0201'

# Selected element in index mode
set index-active-fg '#0d0201'
set index-active-bg '#a5b7cf'