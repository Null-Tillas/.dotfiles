### Settings from original zathurarc ###
set guioptions "s v"
set window-height 1000
set window-width 1500

### zathura-pywal ###
# Allow recolor
set recolor 'true'

# Don't allow original hue when recoloring
set recolor-keephue 'false'

# Don't keep original image colors while recoloring
set recolor-reverse-video 'false'

# Command line completion entries
set completion-fg '#b2bbd6'
set completion-bg '#090304'

# Command line completion group elements
set completion-group-fg '#493D4E'
set completion-group-bg '#090304'

# Current command line completion element
set completion-highlight-fg '#090304'
set completion-highlight-bg '#b2bbd6'

# Default foreground/background color
set default-bg rgba(9,3,4,1)

# Input bar
set inputbar-fg '#b2bbd6'
set inputbar-bg '#090304'

# Notification
set notification-fg '#b2bbd6'
set notification-bg '#090304'

# Error notification
set notification-error-fg '#b2bbd6'
set notification-error-bg '#35364A'

# Warning notification
set notification-warning-fg '#b2bbd6'
set notification-warning-bg '#35364A'

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg '#b2bbd6'
set statusbar-bg '#090304'

# Highlighting parts of the document (e.g. show search results)
set highlight-color '#493D4E'
set highlight-active-color '#493D4E'

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor '#b2bbd6'

# 'Loading...' text
set render-loading-fg '#b2bbd6'
set render-loading-bg '#090304'

# Index mode
set index-fg '#b2bbd6'
set index-bg '#090304'

# Selected element in index mode
set index-active-fg '#090304'
set index-active-bg '#b2bbd6'